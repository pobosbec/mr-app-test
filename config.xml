<?xml version="1.0" encoding="UTF-8"?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        xmlns:android = "http://schemas.android.com/apk/res/android"
        id        = "com.bosbec.testapp"
        version   = "0.3.1">
  <!-- VERSION HERE -->
  
  <name>Mobile Response App</name>

  <description>
    Mobile Response messaging app
  </description>


  <gap:config-file platform="android" parent="/manifest">
    <application android:debuggable="true" />
  </gap:config-file>

  <!-- Pushwoosh plugin -->
  <gap:plugin name="pushwoosh-pgb-plugin" source="npm" />


  <icon src="www/icon.png" />
  <splash src="www/splash.png" />

  <platform name="ios">
    
    <icon src="www/res/icons/ios/icon-60-3x.png" platform="ios" width="180" height="180" />
    <icon src="www/res/icons/ios/icon-60.png" platform="ios" width="60" height="60" />
    <icon src="www/res/icons/ios/icon-60-2x.png" platform="ios" width="120" height="120" />
    <icon src="www/res/icons/ios/icon-76.png" platform="ios" width="76" height="76" />
    <icon src="www/res/icons/ios/icon-76-2x.png" platform="ios" width="152" height="152" />
    <icon src="www/res/icons/ios/icon-small.png" platform="ios" width="29" height="29" />
    <icon src="www/res/icons/ios/icon-small-2x.png" platform="ios" width="58" height="58" />
    <icon src="www/res/icons/ios/icon-40.png" platform="ios" width="40" height="40" />
    <icon src="www/res/icons/ios/icon-40-2x.png" platform="ios" width="80" height="80" />

    <splash platform="ios" src="www/res/screens/ios/screen-iphone-portrait.png" width="320" height="480" />
    <splash platform="ios" src="www/res/screens/ios/screen-iphone-portrait-2x.png" width="640" height="960" />
    <splash platform="ios" src="www/res/screens/ios/screen-iphone-portrait-568h-2x.png" width="640" height="1136" />
    <splash platform="ios" src="www/res/screens/ios/screen-iphone-portrait-667h.png" width="750" height="1334" />
    <splash platform="ios" src="www/res/screens/ios/screen-iphone-portrait-736h.png" width="1242" height="2208" />
    <splash platform="ios" src="www/res/screens/ios/screen-ipad-portrait.png" width="768" height="1024" />
    <splash platform="ios" src="www/res/screens/ios/screen-ipad-portrait-2x.png" width="1536" height="2048" />

  </platform>

  <platform name="android">

    <icon platform="android" src="www/res/icons/android/icon-36-ldpi.png" qualifier="ldpi" />
    <icon platform="android" src="www/res/icons/android/icon-48-mdpi.png" qualifier="mdpi" />
    <icon platform="android" src="www/res/icons/android/icon-72-hdpi.png" qualifier="hdpi" />
    <icon platform="android" src="www/res/icons/android/icon-96-xhdpi.png" qualifier="xhdpi" />

    <splash platform="android" qualifier="ldpi" src="www/res/screens/android/screen-ldpi-portrait.png" />
    <splash platform="android" qualifier="mdpi" src="www/res/screens/android/screen-mdpi-portrait.png" />
    <splash platform="android" qualifier="hdpi" src="www/res/screens/android/screen-hdpi-portrait.png" />
    <splash platform="android" qualifier="xhdpi" src="www/res/screens/android/screen-xhdpi-portrait.png" />

  </platform>
  
    <content src="index.html" />
    <!--<plugin name="io.litehelpers.cordova.sqlite" spec="0.7.10" source="pgb" />-->
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <!--<plugin name="cordova-plugin-app-version" spec="0.1.8" source="npm" />-->
    <!--<plugin name="cordova-plugin-statusbar" spec="2.1.3" source="npm" />-->
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="*" />
</widget>
