<?xml version='1.0' encoding='utf-8'?>
<widget id="com.bosbec.testapp" version="0.2.5b" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0"> <!-- VERSION HERE -->
    <name>Mobile Response App</name>
    <description>
        Mobile Response messaging app
    </description>
    <author email="support@mobileresponse.se" href="http://www.mobileresponse.com">
        Bosbec MobileResponse Team
    </author>
  
    <platform name="ios">
      <icon src="www/res/icon/ios/icon.png" />

      <!-- iPhone 6 / 6+ -->
      <icon src="www/res/icon/ios/icon-60-3x.png" platform="ios" width="180" height="180" />

      <!-- iPhone / iPod Touch  -->
      <icon src="www/res/icon/ios/icon-60.png" platform="ios" width="60" height="60" />
      <icon src="www/res/icon/ios/icon-60-2x.png" platform="ios" width="120" height="120" />

      <!-- iPad -->
      <icon src="www/res/icon/ios/icon-76.png" platform="ios" width="76" height="76" />
      <icon src="www/res/icon/ios/icon-76-2x.png" platform="ios" width="152" height="152" />

      <!-- Settings Icon -->
      <icon src="www/res/icon/ios/icon-small.png" platform="ios" width="29" height="29" />
      <icon src="www/res/icon/ios/icon-small-2x.png" platform="ios" width="58" height="58" />

      <!-- Spotlight Icon -->
      <icon src="www/res/icon/ios/icon-40.png" platform="ios" width="40" height="40" />
      <icon src="www/res/icon/ios/icon-40-2x.png" platform="ios" width="80" height="80" />
      
      <splash src="splash.png" />

      <splash platform="ios" src="www/res/screens/ios/screen-iphone-portrait.png" width="320" height="480" />
      <splash platform="ios" src="www/res/screens/ios/screen-iphone-portrait-2x.png" width="640" height="960" />
      <splash platform="ios" src="www/res/screens/ios/screen-iphone-portrait-568h-2x.png" width="640" height="1136" />
      <splash platform="ios" src="www/res/screens/ios/screen-iphone-portrait-667h.png" width="750" height="1334" />
      <splash platform="ios" src="www/res/screens/ios/screen-iphone-portrait-736h.png" width="1242" height="2208" />
      <splash platform="ios" src="www/res/screens/ios/screen-ipad-portrait.png" width="768" height="1024" />
      <splash platform="ios" src="www/res/screens/ios/screen-ipad-portrait-2x.png" width="1536" height="2048" />
    </platform>
  
  
  <platform name="android">
    <icon src="icon.png" />

    <icon src="www/res/icon/android/icon-36-ldpi.png" qualifier="ldpi" />
    <icon src="www/res/icon/android/icon-48-mdpi.png" qualifier="mdpi" />
    <icon src="www/res/icon/android/icon-72-hdpi.png" qualifier="hdpi" />
    <icon src="www/res/icon/android/icon-96-xhdpi.png" qualifier="xhdpi" />

    <splash src="splash.png" />
    
    <splash platform="android" qualifier="ldpi" src="www/res/screens/android/screen-ldpi-portrait.png" />
    <splash platform="android" qualifier="mdpi" src="www/res/screens/android/screen-mdpi-portrait.png" />
    <splash platform="android" qualifier="hdpi" src="www/res/screens/android/screen-hdpi-portrait.png" />
    <splash platform="android" qualifier="xhdpi" src="www/res/screens/android/screen-xhdpi-portrait.png" />

  </platform>
  
    <content src="index.html" />
    <!--<plugin name="io.litehelpers.cordova.sqlite" spec="0.7.10" source="pgb" />-->
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-app-version" spec="0.1.8" source="npm" />
    <plugin name="cordova-plugin-statusbar" spec="2.1.3" source="npm" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="*" />
</widget>
